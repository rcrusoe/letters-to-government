<%= simple_form_for(@letter, html: { multipart: true }) do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
	<%= f.input :title %>
	<%= f.input :subject %>
	<%= f.input :body %>
	</div>

	<%= f.association :representatives, as: :check_boxes, collection: Representative.order(:first_name), label_method: :full_name %>

	<div class="form-actions">
	<%= f.button :submit %>
	</div>
<% end %>