<div class="ui form">
	<%= simple_form_for(@letter, html: { multipart: true }) do |f| %>
		<%= f.error_notification %>

		<div class="form-inputs">
			<%= f.input :title, placeholder: 'Enter a title for this letter' %>
			<%= f.input :subject, placeholder: 'Enter an email subject' %>
			<%= f.input :body, placeholder: 'Write your letter...' %>
		</div>

		<div class="representatives">
			<%= f.association :representatives, collection: Representative.order(:first_name), label_method: :full_name, as: :check_boxes %>
		</div>
		
		
		
		<!--
		<select name="gender" class="ui dropdown" multiple="" id="select-representatives">
		  <option value="">Gender</option>
		  <option value="male">Male</option>
		  <option value="female">Female</option>
		</select>
		-->
		

		<div class="form-actions">
			<%= f.button :submit, class: 'ui blue button' %>
		</div>
	<% end %>
</div>

<script>
$('#select-representatives')
  .dropdown()
;